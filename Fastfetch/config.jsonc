{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/master/doc/json_schema.json",
  "logo": {
    "type": "none"
  },
  "display": {
    "separator": " ",
    "color": {
        "keys": "#0ab182",
        "title": "#0ab182"
    },
    "key": {
        "width": 12,
        "type": "string"
    },
    "bar": {
        "width": 10,
        "char": {
            "elapsed": "â– ",
            "total": "-"
        }
    },
    "percent": {
        "type": 2,
        "color": {
            "green": "#0add66",
            "yellow": "#ffda3d",
            "red": "#eb4455"
        }
    }
  },
  "modules": [
    {
      "type": "title",
      "format": "-----[{host-name-colored}]-----"
    },
    {
      "type": "cpu",
      "format": "{name} ({cores-physical}/{cores-logical})"
    },
    {
      "type": "gpu",
      "format": "{name}"
    },
    "memory",
    {
      "type": "disk",
      "key": "Disk",
      "format": "{size-percentage-bar} {size-used}/{size-total}"
    },
    {
      "type": "battery",
      "key": "Battery",
      "format": "{capacity-bar} {status} {time-formatted}"
    },
    {
      "type": "uptime",
      "format": "{formatted} ({boot-time})"
    },
    {
      "type": "localip",
      "key": "IP",
      "format": "{ipv4} ({ifname})"
    }
  ]
}
